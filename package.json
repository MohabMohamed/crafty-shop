{
  "name": "crafty-shop",
  "version": "1.0.0",
  "description": "A shop for handcrafted items made by creative people",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "format": "prettier-standard 'src/**/*.js'",
    "prepare:dev": "husky install"
  },
  "author": "Mohab Abd El-Dayem <mohab.m.mohamed@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.7",
    "prettier-standard": "^16.4.1",
    "standard": "^16.0.3",
    "supertest": "^6.1.3",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  }
}
